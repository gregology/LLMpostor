# LLMposter Environment Configuration
# Copy this file to .env and customize the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# Server Configuration
HOST_PORT=8000
PORT=8000

# Application Configuration
PROMPTS_FILE=/app/prompts.yaml
LOG_LEVEL=info

# Game Configuration
RESPONSE_TIME_LIMIT=180
GUESSING_TIME_LIMIT=120
RESULTS_DISPLAY_TIME=30
MAX_PLAYERS_PER_ROOM=8
MAX_RESPONSE_LENGTH=100

# Nginx Configuration (when using nginx profile)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Security (for production)
# Generate a secure secret key with: uv run python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY=your-secure-secret-key-here